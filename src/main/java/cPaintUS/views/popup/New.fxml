<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane 
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="cPaintUS.controllers.popup.NewController">
	<VBox alignment="CENTER">
		<Label fx:id="title"
			text="Do you want to save your workspace?" />
		<HBox fx:id="buttonsHBox" alignment="CENTER" spacing="10">
			<Button fx:id="yesBtn" onAction="#handleYesClick" text="Yes" />
			<Button fx:id="noBtn" onAction="#handleNoClick" text="No" />
		</HBox>
	</VBox>
</AnchorPane>