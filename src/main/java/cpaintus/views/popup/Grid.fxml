<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="cpaintus.controllers.popup.GridController">
	<VBox alignment="CENTER" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
      <CheckBox fx:id="activateGridControl" mnemonicParsing="false" text="Activate Grid">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </CheckBox>
      <HBox>
         <children>
            <Label text="Grid Step : " />
            <Spinner fx:id="gridStepControl" prefWidth="100.0" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
		<HBox fx:id="buttonsHBox" alignment="CENTER" spacing="10">
			<Button fx:id="yesBtn" onAction="#handleYesClick" text="Validate">
            <HBox.margin>
               <Insets left="10.0" right="10.0" />
            </HBox.margin></Button>
			<Button fx:id="noBtn" onAction="#handleNoClick" text="Cancel">
            <HBox.margin>
               <Insets left="10.0" right="10.0" />
            </HBox.margin></Button>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
		</HBox>
      <opaqueInsets>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </opaqueInsets>
	</VBox>
</AnchorPane>
